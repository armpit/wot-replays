<a class="bs-tooltip btn btn-default btn-like-replay" href="[% h.get_id(replay) %]" data-toggle="tooltip" data-container="body" data-placement="bottom" title="[% h.loc('replay.button.like.title') %]"><span class="badge">[% replay.site.like || '0' %]</span> [% h.loc('replay.button.like.label') %]</a>
<a class="bs-tooltip btn btn-default btn-save-replay [% IF replay.site.orphan %]disabled[% END %]" data-placement="bottom" data-toggle="tooltip" data-container="body" title="[% h.loc('replay.button.save.title') %]" href="[% config.urls.replays %]/[% replay.file |uri %]"><span class="badge">[% replay.site.downloads || '0' %]</span> [% h.loc('replay.button.save.label') %]</a>
<a class="bs-tooltip btn btn-default btn-embed-replay [% IF !replay.site.banner.available %]disabled[% END %]" data-placement="bottom" data-toggle="tooltip" data-container="body" href="[% h.get_id(replay) %]" title="[% h.loc('replay.button.embed.title') %]">[% h.loc('replay.button.embed.label') %]</a>
<a class="bs-tooltip btn btn-default btn-battleviewer [% IF !replay.packets.defined %]disabled[% END %]" data-placement="bottom" data-toggle="tooltip" data-container="body"  title="[% h.loc('replay.button.battleviewer.title') %]" href="/battleviewer/[% h.get_id(replay) %].html">[% h.loc('replay.button.battleviewer.label') %]</a>
<a class="bs-tooltip btn btn-default btn-battleheatmap [% IF !replay.heatmap.defined %]disabled[% END %]" data-placement="bottom" data-toggle="tooltip" data-container="body"  title="[% h.loc('replay.button.battleheatmap.title') %]" href="/battleheatmap/[% h.get_id(replay) %].html">[% h.loc('replay.button.battleheatmap.label') %]</a>
