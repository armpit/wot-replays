[% IF sidebar.info.defined %]
<div class="row">
    <div class="col-lg-12 col-md-12">
        <h4>[% sidebar.info.title %]</h4>
        <div class="alert alert-info">
            [% sidebar.info.text |html_line_break %]
        </div>
    </div>
</div>
[% END %]
[% IF sidebar.alert.defined %]
<div class="row">
    <div class="col-lg-12 col-md-12">
        <h4>[% sidebar.alert.title %]</h4>
        <div class="alert alert-danger">
            [% sidebar.alert.text |html_line_break %]
        </div>
    </div>
</div>
[% END %]
